<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.sevenrocks.firebasedb.DashBoardActivtiy.MainActivity">
    <include layout="@layout/toolbar" />

        <LinearLayout
            android:background="@color/white"
            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/ln"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:textSize="@dimen/_15sdp"
                android:text="List of Lot Numbers"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/bgcolor"
                android:layout_height="@dimen/_35sdp" />

            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_36sdp"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:text=">Select to see the lot number's list.          "
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/pi"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_45sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:textSize="@dimen/_15sdp"
                android:text="Calculate Performance Index"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/bgcolor"
                android:layout_height="@dimen/_35sdp" />

            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_36sdp"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:text=">Performance index of overlock workers."
                android:layout_height="wrap_content" />




        </LinearLayout>




</LinearLayout>
