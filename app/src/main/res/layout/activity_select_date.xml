<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context="com.sevenrocks.firebasedb.DashBoardActivtiy.WorkersRatingActivity">
    <include layout="@layout/toolbar" />

    <LinearLayout
        android:padding="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Select beginDate"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/ThemeColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/sbd"
                android:focusable="false"
                android:hint="pick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>

            <TextView
                android:textSize="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Select endDate"
                android:textColor="@color/ThemeColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:hint="pick"
                android:id="@+id/eed"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>


            <TextView
                android:id="@+id/tverror"
                android:visibility="gone"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_13sdp"
                android:text="Please select the endDate greater than beginDate!"
                android:textColor="@color/red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        </LinearLayout>

    </LinearLayout>

    <TextView
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/cpr"
        android:text="CheckPerformance"
        android:background="@drawable/bgcolor"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_35sdp" />



</LinearLayout>
